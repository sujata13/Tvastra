<!DOCTYPE html>
<html lang="en">
<head>
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAJBel8D54gkYQEMff_sEQQwiBvrJpK7Yo&libraries=places"></script>
	<meta charset="UTF-8">
	<title>Hospital</title>
	<%- include('partials/head.ejs') %>
	</head>
<body>
	<header>
		<%- include('partials/header.ejs') %>
	</header>
	<section class="page_desc page_desc--hospital">
		<div class="container page_desc__container">
			<h1 class="page_desc__container__heading">
				Hospitals in <span>Delhi</span>
			</h1>
		</div>
	</section>
	<div class="breadcrumb">
		<div class="breadcrumb__container">
			<p class="breadcrumb__text">Home / Hospital List</p>
			<select class="breadcrumb__sort">
				<option value="" selected>Sort By</option>
				<option value="name">Name</option>
				<option value="name">No. Of Beds</option>
			</select>
		</div>
	</div>

	<div class="hospital_list">
		<div class="grid hospital_list__container">
			<div class="grid hospital_list__container__col-1">
				<div class="grid doctor_list__container__col-1__filter doctor_list__container__col-1__filter-by">
					<div class="doctor_list__container__col-1__filter-by__title">
						<p>Filter By</p>
					</div>
					<div class="doctor_list__container__col-1__filter-by__tags">
						<span class="doctor_list__container__col-1__filter-by__tags__tag">DLF Cyber City<i class="fas fa-times"></i></span>
						<span class="doctor_list__container__col-1__filter-by__tags__tag">30+<i class="fas fa-times"></i></span>
						<span class="doctor_list__container__col-1__filter-by__tags__tag">Apollo Hospital<i class="fas fa-times"></i></span>
						<span class="doctor_list__container__col-1__filter-by__tags__tag">DLF Cyber City<i class="fas fa-times"></i></span>
						<span class="doctor_list__container__col-1__filter-by__tags__tag">DLF Cyber City<i class="fas fa-times"></i></span>
					</div>
				</div>
				<div class="grid hospital_list__container__col-1__filter hospital_list__container__col-1__filter-1">
					<p class="hospital_list__container__col-1__filter__title">Location</p>
					<span class="hospital_list__container__col-1__filter__search"><i class="fas fa-search"></i></span>
					<span class="hospital_list__container__col-1__filter__collapse"><i class="fas fa-minus"></i></span>
					<div class="hospital_list__container__col-1__filter__options">
						<label for="DLF"><input type="checkbox" name="DLF">DLF Cyber City</label>
						<label for="DLF"><input type="checkbox" name="DLF">Dwarka</label>
						<label for="DLF"><input type="checkbox" name="DLF">Lajpat Nagar</label>
						<label for="DLF"><input type="checkbox" name="DLF">Palam Vihar</label>
						<label for="DLF"><input type="checkbox" name="DLF">Punjabi Bhag</label>
						<label for="DLF"><input type="checkbox" name="DLF">Pusa Road</label>
					</div>
					<div class="hospital_list__container__col-1__filter__show_more"><span><i class="fas fa-plus"></i></span>Show More</div>
				</div>
				<div class="grid hospital_list__container__col-1__filter hospital_list__container__col-1__filter-2">
					<p class="hospital_list__container__col-1__filter__title">Treatment</p>
					<span class="hospital_list__container__col-1__filter__search"><i class="fas fa-search"></i></span>
					<span class="hospital_list__container__col-1__filter__collapse"><i class="fas fa-minus"></i></span>
					<div class="hospital_list__container__col-1__filter__options">
						<label for="DLF"><input type="checkbox" name="DLF">Multi Organ Transplant</label>
						<label for="DLF"><input type="checkbox" name="DLF">Orthopedic Surgery</label>
						<label for="DLF"><input type="checkbox" name="DLF">Infertility Treatment</label>
						<label for="DLF"><input type="checkbox" name="DLF">Dentistry</label>
						<label for="DLF"><input type="checkbox" name="DLF">Cardiology</label>
						<label for="DLF"><input type="checkbox" name="DLF">Cancer</label>
					</div>
					<div class="hospital_list__container__col-1__filter__show_more"><span><i class="fas fa-plus"></i></span> Show More</div>
				</div>
				<div class="grid hospital_list__container__col-1__filter hospital_list__container__col-1__filter-3">
					<p class="hospital_list__container__col-1__filter__title">Hospitals</p>
					<span class="hospital_list__container__col-1__filter__search"><i class="fas fa-search"></i></span>
					<span class="hospital_list__container__col-1__filter__collapse"><i class="fas fa-minus"></i></span>
					<div class="hospital_list__container__col-1__filter__options">
						<label for="DLF"><input type="checkbox" name="DLF">Apollo Hospital</label>
						<label for="DLF"><input type="checkbox" name="DLF">Manipal North Side Hospital</label>
						<label for="DLF"><input type="checkbox" name="DLF">Northstar</label>
						<label for="DLF"><input type="checkbox" name="DLF">AIIMS</label>
						<label for="DLF"><input type="checkbox" name="DLF">Fortis Hospital</label>
						<label for="DLF"><input type="checkbox" name="DLF">Elbit Diagnostics</label>
					</div>
					<div class="hospital_list__container__col-1__filter__show_more"><span><i class="fas fa-plus"></i></span> Show More</div>
				</div>
				<div class="grid hospital_list__container__col-1__filter hospital_list__container__col-1__filter-4">
					<p class="hospital_list__container__col-1__filter__title">Years Of Experience</p>
					<span class="hospital_list__container__col-1__filter__search"><i class="fas fa-search"></i></span>
					<span class="hospital_list__container__col-1__filter__collapse"><i class="fas fa-minus"></i></span>
					<div class="hospital_list__container__col-1__filter__options">
						<label for="DLF"><input type="checkbox" name="DLF">30+</label>
						<label for="DLF"><input type="checkbox" name="DLF">25+</label>
						<label for="DLF"><input type="checkbox" name="DLF">20+</label>
						<label for="DLF"><input type="checkbox" name="DLF">15+</label>
						<label for="DLF"><input type="checkbox" name="DLF">10+</label>
						<label for="DLF"><input type="checkbox" name="DLF">5+</label>
					</div>
					<div class="hospital_list__container__col-1__filter__show_more"><span><i class="fas fa-plus"></i></span> Show More</div>
				</div>
			</div>

			<div class="grid hospital_list__container__col-2">
				<% for(let i = 0; i < hospital.length; i++) { %>
				<div class="grid hospital_list__container__col-2__card">
					<div class="grid hospital_list__container__col-2__card__name">
						<h3><%= hospital[i].name %></h3>
					</div>
					<div class="hospital_list__container__col-2__card__other_details">
						<p class="hospital_list__container__col-2__card__other_details__para hospital_list__container__col-2__card__other_details__achievement-1"><span><i class="fas fa-map-marker-alt"></i></span><%= hospital[i].address %></p>
						<p class="hospital_list__container__col-2__card__other_details__para hospital_list__container__col-2__card__other_details__achievement-2"><span><i class="fas fa-bed"></i></span><%= hospital[i].beds %> beds</p>
						<p class="hospital_list__container__col-2__card__other_details__para hospital_list__container__col-2__card__other_details__experience"><span><i class="fas fa-stethoscope"></i></span>Famous Treatments</p>
						<div class="hospital_list__container__col-2__card__other_details__tags">
							<% for(let j = 0; j < hospital[i].tags.length; j++){ %>
							<span class="hospital_list__container__col-2__card__other_details__tags__tag"><%= hospital[i].tags[j] %></span>
							<% } %>
						</div>
					</div>
					<button class="hospital_list__container__col-2__card__book">Call Now</button>
					<div class="hospital_list__container__col-2__card__hospital_img_wrapper">
						<img src="<%= hospital[i].imageSrc %>" alt="" class="hospital_list__container__col-2__card__hospital_img_wrapper__img">	
					</div>
				</div>
				<% } %>
			</div>
		</div>
	</div>

	<div class="help">
		<%- include('partials/help.ejs') %>
	</div>
	<footer class="footer">
		<%- include('partials/footer.ejs') %> 
	</footer>
	<div class="border">
	</div>

	<script type="text/javascript" src="../assets/scripts/index.js"></script>
</body>
</html>
